# Inter-Realm Architecture Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ============================================
# Network Configuration
# ============================================
NETWORK=mainnet
RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
CHAIN_ID=1

# Alternative Networks
# NETWORK=polygon
# RPC_URL=https://polygon-rpc.com
# CHAIN_ID=137

# NETWORK=sepolia
# RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID
# CHAIN_ID=11155111

# ============================================
# Wallet Configuration
# ============================================
DEPLOYER_PRIVATE_KEY=your_private_key_here
ADMIN_ADDRESS=0xYourAdminAddress

# ============================================
# Gas Configuration
# ============================================
GAS_PRICE=50000000000
GAS_LIMIT=8000000
CONFIRMATIONS=2

# ============================================
# Contract Verification
# ============================================
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# ============================================
# ZK Configuration
# ============================================
ZK_PROVING_KEY_PATH=./keys/proving_key.json
ZK_VERIFICATION_KEY_PATH=./keys/verification_key.json

# ============================================
# Fee Configuration (in wei)
# ============================================
BASE_FEE=1000000000000000
INTERGALACTIC_FEE=10000000000000000

# ============================================
# Realm Configuration
# ============================================
# Initial realm verifiers (comma-separated addresses)
REALM_VERIFIERS=0xVerifier1,0xVerifier2,0xVerifier3

# ============================================
# Monitoring and Alerts
# ============================================
ENABLE_MONITORING=true
ALERT_EMAIL=alerts@omnitech1.io
SENTRY_DSN=your_sentry_dsn

# ============================================
# API Configuration
# ============================================
API_PORT=3000
API_HOST=localhost
ENABLE_CORS=true

# ============================================
# Database Configuration (if needed)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=interrealm
DB_USER=postgres
DB_PASSWORD=your_password

# ============================================
# Redis Configuration (for caching)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ============================================
# Security
# ============================================
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# ============================================
# Feature Flags
# ============================================
ENABLE_GOVERNANCE=true
ENABLE_BATCH_PROCESSING=true
ENABLE_INTERGALACTIC_TRANSFERS=true

# ============================================
# Development
# ============================================
DEBUG=false
LOG_LEVEL=info
NODE_ENV=production
